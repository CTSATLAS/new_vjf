.container
  .row
    .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
      %h2 Log in to Your Account

      .panel.panel-default.panel-form
        .panel-body
          = form_for(resource, as: resource_name, url: session_path(resource_name), html_options: { class: 'form-horizontal' }) do |f|
            .form-group
              = f.label :email, class: 'control-label'
              = f.email_field :email, autofocus: true, class: 'form-control'

            .form-group
              = f.label :password, class: 'control-label'
              = f.password_field :password, autocomplete: 'off', class: 'form-control'

            .checkbox
              %label
                = f.check_box :remember_me
                Remember me

            .actions
              = f.submit 'Log in', class: 'btn btn-primary pull-left'
              %p.pull-right= link_to "Forgot your password?", new_password_path(resource_name)
              .clearfix
